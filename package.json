{
  "name": "vh-wp-blocks",
  "version": "0.1.2",
  "description": "A collection of custom Gutenberg blocks for editorial and content-rich WordPress sites.",
  "author": "vhoyer",
  "license": "GPL-2.0-or-later",
  "main": "build/index.js",
  "scripts": {
    "build": "wp-scripts build --blocks-manifest",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "packages-update": "wp-scripts packages-update",
    "preplugin-zip": "node scripts/bump-version.js",
    "plugin-zip": "wp-scripts plugin-zip",
    "start": "wp-scripts start --blocks-manifest",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "dev": "browser-sync start --proxy 'localhost:8888' --files 'build/**/*,src/**/*.php' --no-open"
  },
  "dependencies": {
    "@wordpress/block-editor": "latest",
    "@wordpress/blocks": "latest",
    "@wordpress/i18n": "latest"
  },
  "devDependencies": {
    "@wordpress/env": "^10.39.0",
    "@wordpress/scripts": "^31.5.0",
    "browser-sync": "^3.0.4"
  }
}
