{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "create-block/vh-tag-carousel",
  "version": "0.1.14",
  "title": "VH Tag Carousel",
  "category": "widgets",
  "icon": "slides",
  "description": "Display posts filtered by tags in an infinite auto-scrolling carousel.",
  "keywords": [
    "carousel",
    "posts",
    "tags",
    "slider"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "filterMode": {
      "type": "string",
      "default": "recent",
      "enum": [
        "recent",
        "tag"
      ]
    },
    "captionPosition": {
      "type": "string",
      "default": "below",
      "enum": [
        "below",
        "overlay"
      ]
    },
    "aspectRatio": {
      "type": "string",
      "default": "4/3",
      "enum": [
        "4/3",
        "4/5"
      ]
    },
    "showCategory": {
      "type": "boolean",
      "default": false
    },
    "blockId": {
      "type": "string",
      "default": ""
    },
    "customCSS": {
      "type": "string",
      "default": ""
    },
    "tagIds": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "default": []
    },
    "postsCount": {
      "type": "integer",
      "default": 6
    }
  },
  "textdomain": "vh-wp-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "render": "file:./render.php"
}
